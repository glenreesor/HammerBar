{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "types": ["./types/hammerspoon"],
    "strict": true,
    "baseUrl": "./"
  },
  "exclude": ["src/**/*.test.ts"],
  "tstl": {
    "luaBundle": "build/init.lua",
    "luaBundleEntry": "src/init.ts",
    "luaLibImport": "require-minimal",
    "luaTarget": "5.4"
  }
}
